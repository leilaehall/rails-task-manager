<% @tasks.each do |task| %>
  <h2><%= link_to task.title, task_path(task)%></h2>
  <p><%= task.details %></p>
  <p><%= task.completed %></p>
  <%= link_to "Remove task", task_path(task),
  method: 'delete',
  data: { confirm: "Are you sure?" } %>
  <%= link_to 'edit', edit_task_path(task) %>
<% end %>
